<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>SimpleFinancialManagement</display-name>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.filter.EncodingFilter</filter-class><!--全路径 从根包开始一直到类名-->
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern> <!--*即为过滤所有-->
    </filter-mapping>

    <!--用户-->
    <servlet><!--servlet类路径配置-->
        <servlet-name>User_LoginServlet</servlet-name>
        <servlet-class>com.servlet.User.User_LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping><!--servlet类映射配置-->
        <servlet-name>User_LoginServlet</servlet-name>
        <url-pattern>/User_LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>User_RegisterServlet</servlet-name>
        <servlet-class>com.servlet.User.User_RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User_RegisterServlet</servlet-name>
        <url-pattern>/User_RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>User_UpdateServlet</servlet-name>
        <servlet-class>com.servlet.User.User_UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User_UpdateServlet</servlet-name>
        <url-pattern>/User_UpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>User_ExitServlet</servlet-name>
        <servlet-class>com.servlet.User.User_ExitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User_ExitServlet</servlet-name>
        <url-pattern>/User_ExitServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>User_DeleteServlet</servlet-name>
        <servlet-class>com.servlet.User.User_DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User_DeleteServlet</servlet-name>
        <url-pattern>/User_DeleteServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User_SearchServlet</servlet-name>
        <servlet-class>com.servlet.User.User_SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User_SearchServlet</servlet-name>
        <url-pattern>/User_SearchServlet</url-pattern>
    </servlet-mapping>

    <!--账单-->
    <servlet>
        <servlet-name>Bill_AddServlet</servlet-name>
        <servlet-class>com.servlet.Bill.Bill_AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bill_AddServlet</servlet-name>
        <url-pattern>/Bill_AddServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Bill_ManageServlet</servlet-name>
        <servlet-class>com.servlet.Bill.Bill_ManageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bill_ManageServlet</servlet-name>
        <url-pattern>/Bill_ManageServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Bill_SearchServlet</servlet-name>
        <servlet-class>com.servlet.Bill.Bill_SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bill_SearchServlet</servlet-name>
        <url-pattern>/Bill_SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Bill_DeleteServlet</servlet-name>
        <servlet-class>com.servlet.Bill.Bill_DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bill_DeleteServlet</servlet-name>
        <url-pattern>/Bill_DeleteServlet</url-pattern>
    </servlet-mapping>
</web-app>